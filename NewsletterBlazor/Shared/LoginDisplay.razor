<AuthorizeView>
    <Authorized>
        <MudLink Href="Identity/Account/Manage">Hello, @SubStringName(context.User.Identity?.Name) !</MudLink>
        
        <form method="post" action="Identity/Account/Logout">
            <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary" Variant="Variant.Text">Log out</MudButton>
        </form>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="Identity/Account/Register">Register</MudLink>
        <MudLink Href="Identity/Account/Login">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>

@code{
    private string SubStringName(string name) => name.Substring(0, name.Length-15);
}